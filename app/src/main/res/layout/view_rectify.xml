<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_left_up_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:background="@mipmap/ic_right"/>
    <ImageView
        android:id="@+id/iv_up_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_down"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:id="@+id/iv_down_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_up"
        android:layout_marginBottom="40dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/iv_down_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_right"
        android:layout_marginLeft="50dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/iv_down_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:background="@mipmap/ic_left"
        android:visibility="invisible"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/iv_right_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_down"
        android:layout_marginTop="40dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/iv_right_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:background="@mipmap/ic_up"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <ImageView
        android:id="@+id/iv_up_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_left"
        android:layout_marginRight="40dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_left_up_right"
        android:layout_toRightOf="@+id/iv_up_down"
        android:layout_above="@+id/iv_up_left"
        android:layout_toLeftOf="@+id/iv_right_down"
        android:background="@drawable/shape_selected_border">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/shape_circle">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_left_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_right"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_left_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/iv_left_right"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_top_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_down"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_top_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/iv_top_down"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>